<!--miniprogram/pages/face-love/face-love.wxml-->
<view class="box" style="background:linear-gradient(180deg,{{background}} 0%,rgba(28,37,50,0.7) 77%,rgba(28,37,50,1) 100%)">
	<view class="navigation-bar" style="padding-top:{{navigationBarPaddingTop}}px">人像魅力</view>
	<view class="pic-box" style="{{picBoxBorder}}">
		<image class="default-big-pic" src="/images/defaultImg.png" mode="aspectFit" wx:if="{{!bigPic}}"></image>
		<image class="big-pic" src="{{bigPic}}" mode="widthFix" wx:if="{{bigPic}}"></image>
		<view class="face-item {{currentShapeIndex === index ? 'face-item-active' : ''}}" wx:if="{{shapes.length > 0}}" wx:for="{{shapes}}" wx:key="index" style="left:{{item.x}}rpx; top:{{item.y}}rpx; width: {{item.width}}rpx; height: {{item.height}}rpx;" bindtap="showMeili" data-index="{{index}}">
			<View class='face-line left-top'></View>
			<View class='face-line right-top'></View>
			<View class='face-line left-bottom'></View>
			<View class='face-line right-bottom'></View>
			<!-- 这里要改掉 -->
			<view class="face-attributes" wx:if="{{currentShapeIndex === index}}" style="{{item.x+item.width+230>600? 'right: 103%': 'left: 103%'}}">
				<text class="text-1">年龄：{{item.age}}</text>
				<text class="text-1">表情：{{item.expression}}</text>
				<text class="text-1">魅力：{{item.beauty}}</text>
				<text class="text-1">眼镜：{{item.glass}}</text>
				<text class="text-1">帽子：{{item.hat}}</text>
				<text class="text-1">口罩：{{item.mask}}</text>
			</view>
		</view>
	</view>
	<view class="text-tips">{{textTips}}</view>
	<scroll-view class="scan-pic" scroll-x wx:if="{{facePics.length>0}}">
		<image class="lit-pic" src="{{litPic}}" mode="aspectFit" style="{{litPicBorder}}" bindtap="showPic"></image>
		<image wx:for="{{facePics}}" wx:key="index" class="lit-pic" src="{{item}}" mode="aspectFit" style='{{currentShapeIndex === index ? "border:1px solid #ED4BA6;" :"border:1px solid #4EC9B0" }}' bindtap="showMeili" data-index="{{index}}"></image>
	</scroll-view>
	<view class="upload" bindtap="mainFunc">
		<image class="upload-img" src="/images/upload-img.png"></image>上传
	</view>
</view>