.box {
  min-height: 100vh;
  background: rgb(246, 246, 246);
}

.text-box{
  /* 本身 */
  width: 600rpx;
  margin: 60rpx auto 0;

  /* 内部 */
  font-size: 28rpx;
  line-height: 40rpx;
  font-weight: normal;
  color: #AAAAAA;
  text-align: center;
}

.big-pic {
  /* image inline，强行变成block */
  display: block;
  margin: 60rpx auto 0;
  width: 600rpx;
  height: 600rpx;
}

.scan-pic {
  width: 600rpx;
  white-space: nowrap;
  margin: 60rpx 0 0 64rpx;
  display: flex;
  align-items: center;
}

.face-1 {
  margin-right: 31rpx;
  width: 100rpx;
  height: 100rpx;
}

.face-2 {
  margin-right: 17rpx;
  width: 300rpx;
  height: 200rpx;
}

.face-3 {
  width: 160rpx;
  height: 90rpx;
}

.upload {
  position: fixed;
  left: 0;
  right: 0;
  bottom: 0;
  line-height: 120rpx;
  background: rgb(54,118,235);
  color: white;
  font-size: 36rpx;
  text-align: center;
  letter-spacing: 4rpx;

  /* iPhone X上 34px */
  padding-bottom: constant(safe-area-inset-bottom);
  padding-bottom: env(safe-area-inset-bottom);
}

.uploa-img{
  display: inline-block;
  vertical-align: middle;
  margin: -2rpx 10rpx 0 0;
  width: 54rpx;
  height: 42rpx;
  margin-right: 10rpx;
}