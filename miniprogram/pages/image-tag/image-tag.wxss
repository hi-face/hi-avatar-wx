
.box {
  height: 100vh;
  background: rgba(249, 249, 249, 1);
}

.text-box {
  padding-top: 60rpx;
  text-align: center;
  font-size: 28rpx;
  color: #AAAAAA;
  line-height: 40rpx;
}

.pic-box {
  height: auto;
  position: relative;
}

.big-pic {
  display: block;
  padding: 50rpx 0;
  margin: 0 auto;
  width: 600rpx;
  height: 600rpx;
}


.img-tag-box {
  text-align: center;
}

.img-tag {
  display: inline-block;
  margin: 0 10rpx;
  padding: 0 14rpx;
  font-size: 28rpx;
  line-height: 2;
  border: 1px dashed #979797;
}

.upload {
  position: fixed;
  left: 0;
  right: 0;
  bottom: 0px;
  line-height: 120rpx;
  background: rgb(54, 118, 235);
  color: white;
  text-align: center;
  font-size: 36rpx;
  letter-spacing: 4rpx;
  padding-bottom: constant(safe-area-inset-bottom);
  padding-bottom: env(safe-area-inset-bottom);
}

.uploa-img {
  display: inline-block;
  vertical-align: middle;
  width: 54rpx;
  height: 54rpx;
  margin: -6rpx 16rpx 0 0;
}
