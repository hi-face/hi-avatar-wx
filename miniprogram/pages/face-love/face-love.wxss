/* miniprogram/pages/face-love/face-love.wxss */

.box {
  width: 100%;
  height: 100%;
  position: fixed;
}

.picBox {
  padding-top: 50rpx;
  width: 600rpx;
  margin: 0 auto;
}

.picBox2 {
  width: 600rpx;
  height: auto;
  position: relative;
}

.bigPic {
  width: 600rpx;
  height: 600rpx;
  position: relative;
}

.scanPic {
  width: 600rpx;
  white-space: nowrap;
  margin-top: 50rpx;
}

.litPic {
  margin-right: 12rpx;
  width: 210rpx;
  height: 210rpx;
}

.faceScaned {
  margin-right: 12rpx;
  width: 210rpx;
  height: 210rpx;
}

.uploadPic {
  position: fixed;
  left: 0;
  right: 0;
  bottom: 0px;
  width: 100%;
  height: 12%;
  background-color: rgba(54, 118, 235, 1);
  font-size: normal;
  color: white;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
}

.face-item {
  position: absolute;
}

.face-line {
  position: absolute;
  opacity: .9;
  width: 6rpx;
  height: 6rpx;
}

.left-top {
  border-left: 1px solid #61E6BD;
  border-top: 1px solid #61E6BD;
}

.right-top {
  border-right: 1px solid #61E6BD;
  border-top: 1px solid #61E6BD;
}

.left-bottom {
  border-left: 1px solid #61E6BD;
  border-bottom: 1px solid #61E6BD;
}

.right-bottom {
  border-right: 1px solid #61E6BD;
  border-bottom: 1px solid #61E6BD;
}