.box {
  width: 100%;
  height: 100%;
  display: flex;
  flex-direction: column;
  position: fixed;
  background: -webkit-linear-gradient(top,rgb(139, 59, 112),rgb(51, 42, 63));
}

/* 怎么让背景颜色渐变呢 */
.picBox {
  width: 100%;
  height: 90%;
  display: flex;
  flex-direction: column;
  align-items: center;
  padding-top: 10%;
}

.bigPic {
  width: 90%;
  height: 65%;
}

.scanPic {
  width: 90%;
  white-space: nowrap;
  margin-top: 15rpx;
}

.litPic {
  margin-right: 12rpx;
  width: 210rpx;
  height: 210rpx;
}

.faceScaned {
  margin-right: 12rpx;
  width: 210rpx;
  height: 210rpx;
}

.uploadPic {
  width: 100%;
  height: 12%;
  background-color: rgba(54, 118, 235, 1);
  font-size: normal;
  color: white;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
}